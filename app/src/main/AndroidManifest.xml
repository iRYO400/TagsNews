<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="workshop.akbolatss.tagsnews">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".screen.board.BoardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.favorites.FavoritesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.sources.SourcesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.reminders.RemindersActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".screen.reminders.ReminderReceiver" />
        <service android:name=".screen.reminders.ReminderService" />
    </application>

</manifest>