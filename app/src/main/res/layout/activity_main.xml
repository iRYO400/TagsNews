<?xml version="1.0" encoding="utf-8"?>
<workshop.akbolatss.tagsnews.util.FullDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="workshop.akbolatss.tagsnews.screen.board.BoardActivity">

    <include
        android:id="@+id/boardLayout"
        layout="@layout/activity_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/drawerDetails"
        layout="@layout/activity_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end" />


    <LinearLayout
        android:id="@+id/drawerWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_back_24dp" />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_chevron_left_24dp" />

                <ImageView
                    android:id="@+id/btnForward"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_chevron_right_24dp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btnReload"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_refresh_24dp" />

                <ImageView
                    android:id="@+id/btnShareCurrent"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_share_24dp" />

                <ImageView
                    android:id="@+id/btnBrowser"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_open_in_browser_24dp" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <vcm.github.webkit.proview.ProWebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cacheMode="cacheElseNetwork"
            app:javascriptEnabled="true"
            app:locationEnabled="true"
            app:locationMode="modeFine"
            app:nestedScrollingEnabled="true" />

    </LinearLayout>

</workshop.akbolatss.tagsnews.util.FullDrawerLayout>
